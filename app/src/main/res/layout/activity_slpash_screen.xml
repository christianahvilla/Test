<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"
        tools:context=".ui.activity.SplashScreen">

    <ImageView
            android:id="@+id/splashIcon"
            android:layout_width="@dimen/dimen_80sp"
            android:layout_height="@dimen/dimen_80sp"
            android:src="@drawable/ic_polymer_white_24dp"
            android:layout_above="@+id/splashText"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:id="@+id/splashText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/secondaryTextColor"
            android:textSize="@dimen/dimen_40sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

</RelativeLayout>