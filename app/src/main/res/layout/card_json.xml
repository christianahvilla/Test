<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_3sp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_10sp">

            <ImageView
                    android:layout_width="@dimen/dimen_64sp"
                    android:layout_height="@dimen/dimen_64sp"
                    android:background="@drawable/circle_background_deep_blue"
                    android:src="@drawable/ic_sentiment_neutral_white_24dp"
                    android:padding="@dimen/dimen_10sp"/>

            <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/dimen_10sp"
                    android:layout_weight="1"
                    android:textSize="@dimen/dimen_16sp" />

            <ImageView
                    android:id="@+id/image_completed"
                    android:layout_width="@dimen/dimen_32sp"
                    android:layout_height="@dimen/dimen_32sp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/dimen_3sp"
                    android:padding="@dimen/dimen_10sp"/>

        </LinearLayout>

</android.support.v7.widget.CardView>
